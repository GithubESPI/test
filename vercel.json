{
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "app/api/**/*": {
      "maxDuration": 300
    },
    "app/api/pdf/route": {
      "maxDuration": 300,
      "memory": 3008
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST"],
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  }
}
